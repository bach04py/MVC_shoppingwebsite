@model IEnumerable<ShopMVC8.Data.KhachHang>
@{
    ViewData["Title"] = "Danh mục";
    Layout = "_LayoutAdmin";
}
<!-- LeftNavbar-->
@section LeftNavbar
{
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a asp-controller="AdminHome" asp-action="Index" class="nav-link">Home</a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a asp-controller="AdminCategory" asp-action="Index" class="nav-link">Danh mục</a>
      </li>
    </ul>
}

    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1> Quản lí  khách hàng </h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-controller="AdminHome" asp-action="Index">Home</a></li>
              <li class="breadcrumb-item active"><a asp-controller="AdminCategory" asp-action="Index"> Danh mục </a></li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
    <div class="card">
        <div class="card-header">
          <h3 class="card-title">Danh sách khách hàng</h3>
          <div class="card-tools">
          </div>
        </div>

        <div class="card-body">
            <table class="table table-hover">
                <thread>
                    <tr>
                        <th>Tài khoảng</th>
                        <th>Mật khẩu đã bị băm </th>
                        <th> Hình</th>
                    </tr>
                </thread>
                <tbody>
                 @if (Model!=null && Model.Any())
                        {
                        @foreach (var khachHang in Model)
                           {
                           <tr>
                                <th>@khachHang.MaKh </th>
                                <th>@khachHang.MatKhau</th>
                                <th><img class="img-fluid w-100" src="~/Hinh/KhachHang/@khachHang.Hinh" alt="Hình đại diện của @khachHang.MaKh"/></th>                
                           </tr> 
                          }
                        }
                    else 
                        {
                            <tr>
                                <td colspan ="12"> Không có bản ghi nào </td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
      <!-- /.card -->

    </section>
