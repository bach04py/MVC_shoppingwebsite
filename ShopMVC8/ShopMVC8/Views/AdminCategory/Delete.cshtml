@model ShopMVC8.Data.HangHoa
@{
    ViewData["Title"] = "Xoá danh mục";
    Layout = "_LayoutAdmin";
}
@section LeftNavbar
{
    <ul class="navbar-nav">
      <li class="nav-item">
    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a href="/Admin" class="nav-link">Home</a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a href="/Admin/Category" class="nav-link">Danh mục</a>
      </li>

    </ul>
}
    <div class="card">
        <div class="card-header">
          <h3 class="card-title">Thông tin sản phẩm</h3>
          <div class="card-tools">
              <a asp-action="DeleteConfirmed" asp-controller="AdminCategory" asp-route-id="@Model.MaHh" class="btn btn-danger"> Xác nhận Xoá</a>
              <a asp-action="Index" asp-controller="AdminCategory" class="btn btn-secondary">Hủy</a>
          </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thread>
                    <tr>
                        <th>Mã hàng hoá</th>
                        <th>Tên hàng hoá</th>
                        <th>Số hiệu sản phẩm </th>
                        <th> Mã loại </th>
                        <th> Mô tả đơn vị </th>
                        <th> Đơn giá </th>
                        <th> Hinh</th>
                        <th> Ngày sản xuất </th>
                        <th> Giảm giá </th>
                        <th> Mô tả </th>
                        <th> Mã ncc </th>
                    </tr>
                </thread>
                <tbody>
                           <tr>
                                <th>@Model.MaHh </th>
                                <th>@Model.TenHh </th>
                                <th>@Model.TenAlias </th> 
                                <th>@Model.MaLoai</th>
                                <th>@Model.MoTaDonVi </th>
                                <th>@Model.DonGia </th>
                                <th><img class="img-fluid w-100" src="~/Hinh/HangHoa/@Model.Hinh"></th>                         
                               <th>@Model.NgaySx </th>
                               <th>@Model.GiamGia </th>
                               <th>@Model.MoTa </th>
                               <th>@Model.MaNcc </th>    
                           </tr> 
                </tbody>
            </table>
        </div>
</div>

